<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import zelda.View?>
<BorderPane fx:controller="zelda.Controller" xmlns:fx="http://javafx.com/fxml">
    <top>
        <BorderPane prefHeight="35" style="-fx-background-color: #34d1ae; -fx-padding: 10px, 5px, 10px, 5px" >
            <left><Label fx:id="scoreLabel" style="-fx-font-size: 150%; -fx-text-fill: white" /></left>
            <center><Label fx:id="healthLabel" style="-fx-font-size: 150%; -fx-text-fill: white"/></center>
        </BorderPane>
    </top>

    <center>
        <View fx:id="zeldaView" rowCount="21" columnCount="40" />
    </center>

    <bottom>
        <HBox prefHeight="35" style="-fx-padding: 10px, 5px, 10px, 5px; -fx-background-color: #e8421f">
            <Label style="-fx-font-size: 140%; -fx-text-fill: white"
                   text="Move: WASD | Attack: SPACE | New game: G" />
        </HBox>
    </bottom>
</BorderPane>
